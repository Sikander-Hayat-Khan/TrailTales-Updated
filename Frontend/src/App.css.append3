
/* Blur effect for calendar when entries are open (Mobile only) */
@media (max-width: 768px) {
  .months-scroll-container.blurred {
    filter: blur(5px);
    pointer-events: none; /* Prevent clicking on calendar while blurred */
    transform: scale(0.98); /* Slight pushed back effect */
    transition: all 0.3s ease;
    opacity: 0.6;
  }
}
